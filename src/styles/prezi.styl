/* general */
.mC
  color primary
  &-light
    color lighten(primary,50%)


/* Images */

.logo
  background-position: center
  background-repeat: no-repeat
  &--segway
    background-size: 40%
    background-image: url(../images/segway.jpg)

.fullscreen
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  &--starter
    background-size: 50%
    background-image: url(../images/funestdog.jpg)
  &--sitzplan_try
    background-size: 75%
    background-image: url(../images/sitzplan_try.png)
  &--sitzplan_false
    background-size: 75%
    background-image: url(../images/sitzplan_false.png)
  &--sitzplan_dg
    background-size: 75%
    background-image: url(../images/sitzplan_dg.png)
  &--fight
    background-size: 100%
    background-image: url(../images/fight.gif)
  &--future
    background-size: 100%
    background-image: url(../images/future.gif)
  &--oldman
    background-size: 100%
    background-image: url(../images/oldman.jpg)

